<h1>Listing article_comments</h1>

<table>
  <tr>
    <th>Article</th>
    <th>Author</th>
    <th>Body</th>
  </tr>

<% for article_comment in @article_comments %>
  <tr>
    <td><%=h article_comment.article_id %></td>
    <td><%=h article_comment.author %></td>
    <td><%=h article_comment.body %></td>
    <td><%= link_to 'Show', article_comment %></td>
    <td><%= link_to 'Edit', edit_article_comment_path(article_comment) %></td>
    <td><%= link_to 'Destroy', article_comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New article_comment', new_article_comment_path %>
