<% content_for :sidebar do %>
  <h3>Tags</h3>
  <p>
    <% for tag in object.taggs %>
      <%= link_to tag.title, search_taggs_path(:term => tag.title) %><%=link_to("(x)", tag, :class => :delete_tag, :method => :delete, :confirm => "Are you sure you want to delete the tag '#{tag.title}'?") if tag.user == current_user %>,  
    <% end %>
  </p>
  <p class="small">Tags are words added by users to describe what's on a page. Click one of the tags to see what shares that tag.</p>
  <% if current_user %>
      <h3>Add a tag</h3>
      <p>
      <% form_for [object, Tagg.new] do |f| %>
        <%= f.text_field :title %>
        <%= f.submit "Create Tag" %>
      </p>
	  <% end %>
  <% end %>
<% end %>